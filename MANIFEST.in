MANIFEST.in
# Include important files in the distribution

# Include documentation
include README.md
include LICENSE
include INSTALL.md
include IMPROVEMENTS.md

# Include configuration
include config.yaml
include requirements.txt

# Include scripts
include Makefile
include install.sh
include install.py

# Include data files
recursive-include src/data *.txt

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.log
global-exclude *.session
exclude .gitignore
exclude .dockerignore
exclude Dockerfile
exclude docker-compose.yml
